{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "target": "es2020",
  },
  "declaration": true,
  "extends": "./node_modules/gts/tsconfig-google.json",
  "include": [
    "src/**/*.ts",
  ],
  "typedocOptions": {
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "entryPoints": [
      "./src/",
    ],
    "exclude": [
      "./src/ts/example/example.ts",
      "./src/ts/**/*.test.ts",
    ],
  }
}
