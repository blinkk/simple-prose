{
  "name": "@blinkk/simple-prose",
  "version": "0.1.0",
  "license": "MIT",
  "homepage": "https://blinkk.github.com/simple-prose",
  "description": "Selective structured text editor.",
  "keywords": [
    "editor",
    "prosemirror",
    "simple"
  ],
  "bugs": {
    "url": "https://github.com/blinkk/simple-prose/issues"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blinkk/simple-prose.git"
  },
  "directories": {
    "example": "example"
  },
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist/src",
    "dist/css"
  ],
  "scripts": {
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc && npx gulp build && webpack --config webpack.prod.js",
    "coverage": "codecov",
    "dev": "concurrently \"npx ava --watch\" \"tsc --watch\"",
    "docs": "typedoc",
    "fix": "node ./node_modules/eslint/bin/eslint --fix src/**/*.ts",
    "prepare": "yarn run compile",
    "prepublish": "tsc",
    "serve": "concurrently \"webpack serve --config webpack.dev.js\" \"npx gulp watch\"",
    "test": "nyc ava",
    "test-ci": "nyc --reporter=lcov ava && codecov"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/js-beautify": "^1.13.1",
    "@types/node": "^15.12.0",
    "@types/prismjs": "^1.16.5",
    "@types/prosemirror-commands": "^1.0.4",
    "@types/prosemirror-history": "^1.0.2",
    "@types/prosemirror-inputrules": "^1.0.4",
    "@types/prosemirror-keymap": "^1.0.4",
    "@types/prosemirror-model": "^1.13.0",
    "@types/prosemirror-state": "^1.2.6",
    "@types/prosemirror-view": "^1.17.1",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "ava": "^3.14.0",
    "codecov": "^3.8.2",
    "concurrently": "^6.1.0",
    "esbuild": "^0.12.5",
    "eslint": "^7.26.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-sort-class-members": "^1.11.0",
    "gts": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "js-beautify": "^1.13.13",
    "nyc": "^15.1.0",
    "prismjs": "^1.23.0",
    "sass": "^1.34.1",
    "ts-loader": "^9.2.1",
    "ts-node": "^10.0.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "prosemirror-commands": "^1.1.8",
    "prosemirror-history": "^1.1.3",
    "prosemirror-inputrules": "^1.1.3",
    "prosemirror-keymap": "^1.1.4",
    "prosemirror-model": "^1.14.1",
    "prosemirror-state": "^1.3.4",
    "prosemirror-view": "^1.18.7"
  }
}
